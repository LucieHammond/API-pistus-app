{% extends 'base.html.twig' %}

{% block body %}
    <h1>News</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ news.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if news.date %}{{ news.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ news.title }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ news.text | raw }}</td>
            </tr>
            <tr>
                <th>Target</th>
                <td>{{ news.target }}</td>
            </tr>
        </tbody>
    </table>

            <a href="{{ path('admin_new_index') }}">Retour vers la liste</a>
            <a href="{{ path('admin_new_edit', { 'id': news.id }) }}">Modifier</a>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
{% endblock %}
